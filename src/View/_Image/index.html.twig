{% extends 'layout.html.twig' %}

{% block title %}
	{{ parent () }}
	- Galerie
{% endblock %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/galleryStyle.css">
{% endblock %}

{% block content %}
	<section id="mainPageButton">
		<button>
			<a href="/">Retour Ã  l'accueil</a>
		</button>
	</section>
	<section class='post'>
		<h1>Galerie</h1>
		<section class="galleryImage">
			{% for image in images %}
				<div>
					<a href="/images/show?id={{ image.id }}" class="displayImage">
						<img src="{{ image.url }}" alt="{{ image.title }}">
					</a>
				</div>
			{% else %}
				<p>Nothing to display, yet.</p>
			{% endfor %}
		</section>
	</section>
{% endblock %}
