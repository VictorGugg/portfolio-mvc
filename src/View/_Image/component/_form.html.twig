<section id="admin_form">

	<h3>Ajouter une image</h3>

	<form
		name="admin_form" id="admin_form" method="post" action="" enctype="multipart/form-data">

        {# Space for image/file upload #}

		<input type="hidden" value="{{ image.id }}" name="id">

		<label for="title">Le titre de votre image :</label><br/>
		<input type="text" value="{{ image.title }}" id="title" name="title" maxlength="200" size="80" required/>
		<br/><br/>

		<label for="description">La description de votre image :</label><br/>
		<textarea id="description" name="description" value="{{ image.description }}"
                    maxlength="1000" rows="8" cols="75"></textarea>
		<br/><br/>

		<input type="submit" name="submit" value="Upload"/>

	</form>

</section>

